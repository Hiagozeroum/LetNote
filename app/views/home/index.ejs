	    <div class="container">
	    	<div class="row">
	    		<% for(var i = 0; i < notas.length; i++) { %> 
		    		<div class="col-md-4">
		    			<div class="nota_wrapper">
							<a href="nota?id_nota=<%= notas[i].id_nota %>" class="nota_titulo"><%= notas[i].titulo %></a>-->
			    			<br />
			    			<p class="nota_conteudo">
								<%= notas[i].conteudo %> -->
							<textarea name="conteudo" rows="10" cols="40" maxlength="500"
							class="md-textarea form-control" style="background-color: rgb(252, 248, 228)"> Conteudo n1</textarea>
							</p>
							<form action="/form_editar_nota" method="post">
								<button  type="submit" class="btn btn-primary">Editar</button>
							</form>	
			    		</div>
			    	</div>
					
					</div>
			   <% } %>   
	    	</div>

	    	<div class="botao_unico">
				<form action="/form_criar_nota" method="post">
					<button  type="submit" class="btn btn-primary" style="background-color: #F45E5F"
					>Adicionar nota</button>
				</form>

	    	</div>
			
			
			</form>
	    </div>

		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

